---
import { Image } from 'astro:assets';
import Button from '@/components/starwind/button';
---

<section class="py-15 bg-primary" id="contractor">
  <div class="container">
    <div class="flex flex-col items-start md:flex-row md:items-center gap-6 md:gap-10">
      <div class='max-w-[660px]'>
        <p class="section-pretitle uppercase">We know everyone in town – “Don’t learn the hard way”</p>
        <h2 class="section-title text-white mb-6">ONLY TRUST Riverside Trusted Contractor ®</h2>
        <Button href="#contact" class="hover:bg-white/90 hover:text-primary px-5 md:px-12.5 w-full md:w-auto">Find a trusted contractor</Button>
      </div>
      <div class='md:max-w-[360px] xl:max-w-full'>
        <Image src={import('@/assets/contractor/main.png')} alt="We know everyone in town – “Don’t learn the hard way”" />
      </div>
    </div>
  </div>
</section>
