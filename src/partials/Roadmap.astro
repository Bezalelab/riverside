---
import { Image, getImage } from 'astro:assets';
import StartSurvey from '@/components/survey/StartSurvey.tsx';
const background = await getImage({ src: import('@/assets/roadmap/main.png'), format: 'avif' });
---

<section class="py-30 md:py-42.5 bg-cover bg-no-repeat bg-bottom" style={{ backgroundImage: `url(${background.src})` }}>
  <div class="container">
    <h2 class="section-title text-white max-w-[840px] mx-auto text-center">Let Us Help & Find what You Need</h2>
    <p class="text-white mb-7.5 max-w-[526px] mx-auto text-center">
      Take our quick survey to receive your personalized step-by-step checklist for a successful roofing project based on your specific situation â€“
      whether you're a homeowner or contractor!
    <div class="flex flex-col sm:flex-row justify-center gap-5">
      <StartSurvey client:idle buttonText='Are you a contractor?' isHome userType='Contractor' className='h-12.5 lg:h-15 w-full md:w-[265px] lg:w-[350px]' />
      <StartSurvey client:idle buttonText='Are you a homeowner?' isHome userType='Homeowner' className='h-12.5 lg:h-15 w-full md:w-[265px] lg:w-[350px]' />
    </div>
  </div>
</section>
